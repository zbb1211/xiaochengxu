.weather-container {
  position: relative;
  width: 750rpx;
  padding-top: 200rpx;
  padding-bottom: 224rpx;
}
.weather-temp {
  font-size: 200rpx;
  line-height: 280rpx;
  opacity: 0.8;
  text-align: center;
}
.weather-desc {
  font-size: 40rpx;
  line-height: 56rpx;
  text-align: center;
  opacity: 0.65;
}
.weather-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: -1;
}