.weather-container {
  position: relative;
  width: 750rpx;
  padding-top: 200rpx;
  padding-bottom: 224rpx;
}
.weather-temp {
  font-size: 200rpx;
  line-height: 280rpx;
  opacity: 0.8;
  text-align: center;
}
.weather-desc {
  font-size: 40rpx;
  line-height: 56rpx;
  text-align: center;
  opacity: 0.65;
}
.weather-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: -1;
}
.weather-text {
  text-align: center;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}
.icon {
  width: 36rpx;
  height: 28rpx;
}
.forecast {
  font-size: 30rpx;
  line-height: 42rpx;
  color: #666;
  margin-left: 10rpx;
  opacity: 0.8;
}
.scroll-wrapper {
  display: flex;
}
.scroll-inner {
  flex-shrink: 0;
  width: 120rpx;
  text-align: center;
  margin-right: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.forecast-time {
  display: inline-block;
  width: 100%;
  font-size: 30rpx;
  line-height: 42rpx;
}
.forecast-icon {
  width: 60rpx;
  height: 60rpx;
}